const mongoose = require('mongoose');
const Schema = mongoose.Schema;

const Team = new Schema({
    K: 
    {
        type: String,
        required: true
    },
    QB:
    {
        type: String,
        required: true
    },
    RB:
    {
        type: String,
        required: true
    },
    TE:
    {
        type: String,
        required: true
    },
    WR1:
    {
        type: String,
        required: true
    },
    WR2: 
    {
        type: String,
        required: true
    },
    owner:
    {
        type: String,
        required: true
    },
    points_to_date:
    {
        type: String,
        required: true
    },
    team_name:
    {
        type: String,
        required: true
    }
});

mongoose.model('Team', Team);